footer
 background black
 width 100vw
 height 30vw
 display flex
 .footerLeft
   display none
   @media screen and (min-width: 760px)
     display inline-block
     height 20%
     width 70%
     color white
 .footerRight
   width 100%
   @media screen and (min-width: 760px)
     width 30%
  .footerRightUp
   height 80%
   width 100%
   color white
   padding 40px
   box-sizing border-box
   ul
    list-style none
    li
     margin-bottom 1em
  .footerRightDown
   height 20%
   width 100%
   display flex
   justify-content space-around
   line-height 80px
   box-sizing border-box
   padding 0 40px
   a
    color white
    font-size 2rem
