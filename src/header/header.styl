gris = #939598
verde = #044d64
celeste = #02aec3
negro = #231f20
header
 width 100%
 height 64px
 background negro
 line-height 64px
 top 0
 .logo
  display inline-block
  background url('imagenes/sumergidaLogo.png')
  background-size cover
  height 40px
  width 217px
  margin 12px 0 0 20px
  @media screen and (min-resolution: 2dppx)
   background url('imagenes/sumergidaLogo2x.png') cover
  @media screen and (min-resolution: 3dppx)
   background url('imagenes/sumergidaLogo3x.png') cover
nav
 position absolute
 right 0
 top 0
 line-height 64px
 @media(max-width: 600px)
  top 64px
  background verde
  width 100%
  transition 1s ease
 ul
  display flex
  margin 0
  padding 0
  @media(max-width: 600px)
   width 100%
   display block
  li
   margin-right 30px
   list-style: none
   text-align center
   @media(max-width: 600px)
    margin 0
    border-bottom: 1px solid #e1e1e1
   a
    color #e1e1e1
    text-decoration none
    display block
   a:hover
    color celeste
    border-bottom: 3px solid celeste
    box-sizing: border-box
    @media(max-width: 600px)
     color #e1e1e1
     background celeste
  li:last-child
   @media(max-width: 600px)
    border-bottom: none
.hidden
 @media(max-width: 600px)
  right -100%
.navButton
 font-size 2rem
 position absolute
 right 10px
 color #e1e1e1
 @media(min-width: 600px)
  display none
