gris = rgba(147, 149, 152, 1)
rosado = #9D3973
celeste = #02aec3
blanco = rgba(240, 240, 240, 1)
transparente = rgba(250, 250, 250, 0.2)

header
 width 100vw
 height 5vw
 box-sizing: border-box
 padding 0 5vw 0 5vw
 display: flex
 justify-content: space-between
 background transparente
 position: fixed
 transition: all 0.3s linear
 .logoContainer
   width: 21vw
   display flex
   justify-content: space-between
   align-items: center
   opacity: 0
   transition: opacity 0.5s linear
   text-decoration: none
   .logo
     background url('images/logo.png')
     background-size contain
     repeat none
     height 4vw
     width 4vw
    // @media screen and (min-resolution: 2dppx)
    //  background url('imagenes/sumergidaLogo2x.png') cover
    // @media screen and (min-resolution: 3dppx)
    //  background url('imagenes/sumergidaLogo3x.png') cover
    h1 
      color black
      font-size: 2.5vw
nav
  line-height 5vw
  width: 40vw
  display: flex
  justify-content: space-between
  transition all ease 1s
  @media(max-width: 900px)
    position absolute
    top 5vw
    right: 0
    background blanco
    width 100vw
    transition ease 1s
    height: 384px
    flex-wrap: wrap
  a  
    font-family: 'Yantramanav', sans-serif
    font-size 1.5vw
    font-weight: normal
    text-decoration none
    text-transform: uppercase
    color blanco
    @media(max-width: 900px)
      font-size: 4.5vw
      color rosado
      width: 100vw
      text-align: center
    &:hover
      color rosado
      border-bottom: 3px solid rosado
      box-sizing: border-box
      @media(max-width: 900px)
        color blanco
        background rosado
.hidden
  @media(max-width: 900px)
    right -100vw
.navButton
  font-size 2rem
  color #e1e1e1
  height: 5vw
  line-height: 5vw
  @media(min-width: 900px)
    display none
.blanco
  background: blanco
  .logoContainer
    opacity: 1
  a 
    color black
