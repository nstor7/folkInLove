rosado = #9D3973


.producto
  width: 92%
  margin 10px auto
  @media screen and (min-width: 760px)
    width 80%
  .productoImagen
    width: 300px
    height: 400px
    background: grey
    margin auto
    @media screen and (min-width: 760px)
      margin 0
      display: inline-block
  .productoPrecio
    width 80px
    height: 30px
    line-height: 30px
    background: rosado
    color white
    text-align: center
    padding-left: 220px
    margin 1em auto
    @media screen and (min-width: 760px)
      display inline-block
      vertical-align: top
      float right
      margin 0
  .productoCaracteristicas
    display: inline-block
    @media screen and (min-width: 760px)
      width: 300px
      vertical-align: top
      margin-left: 0 0 0 20px
    ul
      list-style: square
