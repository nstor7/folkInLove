h1, h2, h5
  font-family: 'Mandali', sans-serif
  font-family: 'Century Gothic', sans-serif
  font-weight: normal
  font-size 3vw
  margin 0
  padding 0
  @media(max-width: 800px)
    font-size: 5vw
h3, h6
  font-family: 'Dancing Script', cursive
  font-size 2vw
  font-weight: 400
  margin 0
  padding 0
  @media(max-width: 800px)
    font-size: 6vw
h4
  font-family: 'Yantramanav', sans-serif
  font-size 1vw
  font-weight: light
  margin 0
  padding 0
  @media(max-width: 800px)
    font-size: 4vw
p, li
  font-family: 'Yantramanav', sans-serif
  font-size: 1.3vw
  line-height: 1.6vw  
  letter-spacing: 0.05vw
  @media(max-width: 800px)
    font-size: 3.9vw
    line-height: 4.8vw
    letter-spacing: 0.15vw
  b
    text-transform: uppercase
  i 
    font-size: 1.1vw
    @media(max-width:900px)
      font-size: 3.3vw
a
  text-decoration: none

