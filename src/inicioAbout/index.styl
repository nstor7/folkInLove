gris = rgba(147, 149, 152, 1)
rosado = #9D3973
celeste = #02aec3
negro = rgba(1, 1, 1, 1)
grisClaro = #e1e1e1
transparente = rgba(1, 1, 1, 0.2)

.inicioAbout
  display: flex
  @media(max-width: 800px)
    flex-wrap: wrap
  article
    width: 50vw
    height: 40vw
    box-sizing: border-box
    @media(max-width: 800px)
      width: 100vw
      height: 80vw
  .aboutTexto
    background: grisClaro
    color: negro
    display: flex
    justify-content: center
    align-items: center
    @media(max-width: 600px)
      height: auto
    hgroup
      width: 90%
  .aboutImagen
    background: url('images/about-full.jpg')
    background-size: contain
    @media(max-width: 1280px)
      background: url('images/about-med.jpg')
      background-size: contain
    @media(max-width: 800px)
      background: url('images/about-tab.jpg')
      background-size: contain
    @media(max-width: 600px)
      background: url('images/about-cel.jpg')
      background-size: contain
