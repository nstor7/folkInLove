@import 'https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css'
@import 'https://fonts.googleapis.com/css?family=Dancing+Script|Mandali|Yantramanav:300,400,700'

// GU√çA DE ESTILOS

//Generales
body
  margin 0
div, section, article, a
  box-sizing: border-box
article
  display: flex
  justify-content: center
  align-items: center
//Fuentes
h1, h2
  font-family: 'Mandali', sans-serif
  font-family: 'Century Gothic', sans-serif
  font-weight: normal
  font-size 3vw
  margin 0
  padding 0
  @media(max-width: 900px)
    font-size: 9vw
h3
  font-family: 'Dancing Script', cursive
  font-size 2vw
  font-weight: 400
  margin 0
  padding 0
  @media(max-width: 900px)
    font-size: 3vw
h4
  font-family: 'Yantramanav', sans-serif
  font-size 1vw
  font-weight: light
  margin 0
  padding 0
p, li
  font-family: 'Yantramanav', sans-serif
  font-size: 1.3vw
  line-height: 1.6vw  
  letter-spacing: 0.05vw
  @media(max-width: 900px)
    font-size: 3.9vw
    line-height: 4.8vw
    letter-spacing: 0.15vw
  b
    text-transform: uppercase
  i 
    font-size: 1.1vw
    @media(max-width:900px)
      font-size: 3.3vw
a
  text-decoration: none
//Colores
.blanco
  background: rgba(240, 240, 240, 1)
  color: black
.gris
  background: grey
.negro
  background: rgba(1, 1, 1, 1)
  color: rgba(240, 240, 240, 1)
  .btn:hover
    cursor: pointer
    background: grisClaro
    color: negro
.negroTrans
  background: rgba(1, 1, 1, 0.3)
  color: rgba(240, 240, 240, 1)
.rosa
  background: rgba(242, 37, 147, 1)
  color: rgba(240, 240, 240, 1)
.rosaTrans
  background: rgba(242, 37, 147, 0.6)
  color: rgba(240, 240, 240, 1)
//cajas
.portada
  width: 100vw
  height: 39vw
.completa
  width: 100vw
  height: 40vw
  display flex
  @media(max-width: 800px)
    width: 100vw
    height: auto
  hgroup
    width: 50vw
    height: auto
    @media(max-width: 800px)
      width: 90vw
.mitad
  width: 50vw
  height: 40vw
  @media(max-width: 800px)
    width: 100vw
    height: 80vw
  hgroup
    width: 90%
.tercio
  width: 33.33vw
  height: 40vw
  @media(max-width: 800px)
    width: 100vw
    height: 80vw
.dosTercios
  width: 66.66vw
  height: 40vw
  @media(max-width : 800px)
    width: 100vw
    height 80vw
  hgroup
    width: 90%
.texto
  display flex
  justify-content: center
  align-items: center
  hgroup
    height: auto
    width: 90%
.info 
  height: auto
  padding: 5vw
  hgroup
    width: 100%
    height: 100%
form
  input
    width: 28vw
    height: 2.34vw
    margin-bottom: 0.5vw
    font-family: 'Work Sans', sans-serif
    font-size: 1.3vw
  textarea
    width: 28vw
    font-family: 'Work Sans', sans-serif
    font-size: 1.3vw
  .btn
    width: 12.5vw
    height: 4vw
    float right
  .btn:hover
    cursor: pointer
    background: grisClaro
    color: negro
.lista
  width: 100vw
  height: auto
  display flex
  .listaFiltros
    width: 26vw
    height auto
    padding: 1vw
    border-right: solid 1px black
  .listaCont
    width: 74vw
    height: auto
    padding: 2vw
    display: flex
    justify-content: space-between
.tarjeta
  width: 22vw
  height: 32vw
  padding: 2vw
  flex-wrap: wrap
  background: white
  box-shadow: grey 1px 1px 5px
  position relative
  &:hover
    box-shadow: grey 5px 5px 10px
  .tarjetaImagen
    background: grey 
    width: 18vw
    height: 18vw
  .tarjetaInfo 
    height: 12vw
    hgroup
      display flex
      flex-wrap: wrap
      align-items: center
      h2
        font-size: 2vw
        margin: 1vw 0
      h4 
        width: 100%
    
